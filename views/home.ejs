<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Home</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous" />
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.13/css/select2.min.css" rel="stylesheet" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.13/js/select2.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js"
        integrity="sha384-oBqDVmMz9ATKxIep9tiCxS/Z9fNfEXiDAYTujMAeBAsjFuCZSmKbSSUnQlmh/jp3"
        crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.min.js"
        integrity="sha384-cuYeSxntonz0PPNlHhBs68uyIAVpIIOZZ5JqeqvYYIcEL727kskC66kF92t6Xl2V"
        crossorigin="anonymous"></script>
    <link rel="stylesheet" href="stylesheets/home.css" />

    <!-- google fonts -->
    <link href="https://fonts.googleapis.com/css?family=Rajdhani:500,700&display=swap" rel="stylesheet">

    <script>
        let data = {};
        let usertoken;

        $(document).ready(function () {
            function getCookie(name) {
                const cookieValue = document.cookie
                    .split('; ')
                    .find(row => row.startsWith(name))
                    ?.split('=')[1];
                return cookieValue ? decodeURIComponent(cookieValue) : null;
            }
            const newtoken = localStorage.getItem('token')
            $(".select2").select2();
            document.getElementById("api-form").style.display = "block";
            const homeTab = document.querySelector(".homeTab")
            homeTab?.classList?.add("active")
            usertoken = getCookie('token') || newtoken
            if (!usertoken) {
                window.location.href = '/'
            }
        });
        function changeTab(tab) {
            console.log('tab :>> ', tab);
            const tableTab = document.querySelector(".tableTab")
            const homeTab = document.querySelector(".homeTab")
            const userTab = document.querySelector(".userTab")

            if (tab == "home") {
                userTab?.classList?.remove("active")
                tableTab?.classList?.remove("active")
                homeTab?.classList?.add("active")
                document.getElementById("api-form").style.display = "block";
                document.getElementById("table-form").style.display = "none";
                document.getElementById("user-table").style.display = "none";
            } else if (tab == "table") {
                tableTab?.classList?.add("active")
                homeTab?.classList?.remove("active")
                userTab?.classList?.remove("active")
                document.getElementById("table-form").style.display = "block";
                document.getElementById("api-form").style.display = "none";
                document.getElementById("user-table").style.display = "none";
            } else {
                userTab?.classList?.add("active")
                homeTab?.classList?.remove("active")
                tableTab?.classList?.remove("active")
                document.getElementById("user-table").style.display = "block";
                document.getElementById("api-form").style.display = "none";
                document.getElementById("table-form").style.display = "none";
            }
        }

        function submitForm(e) {
            $('#loadingSpinner').show()
            e.preventDefault()
            const formData = {
                apiURL: $('input[name="apiURL"]').val(),
                method: document.getElementById("methods")?.value,
                body: $('textarea[name="body"]').val() || "{}",
                header: $('textarea[name="header"]').val() || "{}",
                statusCode: $('select[name="statusCode"]').val(),
                time: $('input[name="time"]').val(),
                email: $('input[name="email"]').val()
            };
            $.ajax({
                type: "POST",
                url: "/api/createCronJob",
                data: JSON.stringify(formData),
                headers: {
                    'Authorization': `Bearer ${usertoken}`
                },
                contentType: "application/json",
                success: function (response) {
                    if (response?.isSuccess) {
                        $('#loadingSpinner').hide()

                        const tableBody = document.querySelector('tbody');
                        // Create a new row
                        const newRow = document.createElement('tr');

                        newRow.innerHTML = `<td>${response?.data?.apiURL}</td>
                        <td>${response?.data?.method}</td>
                        <td>${response?.data?.time}</td>
                        <td>${response?.data?.email}</td>
                        <td>${response?.data?.statusCode}</td>
                        <td>${response?.data?.isResolved}</td>`;

                        // Append the row to the table body
                        showToast('successToast', 'Form submitted successfully!');
                        tableBody.appendChild(newRow);
                        document.getElementById("myForm").reset();
                        changeTab("table")
                    } else {
                        $('#loadingSpinner').hide()
                        showToast('errorToast', response.message);

                    }
                },
                error: function (xhr, status, error) {
                    $('#loadingSpinner').hide()
                    showToast('errorToast', xhr.responseText);
                }
            });
        }
        function showToast(toastId, message) {
            const toastElement = $('#' + toastId);
            toastElement.find('.toast-body').text(message);
            const toast = new bootstrap.Toast(toastElement[0]);
            toast.show();
        }

        function logout() {
            document.cookie.split(";").forEach(function (c) {
                document.cookie = c.replace(/^ +/, "").replace(/=.*/, "=;expires=" + new Date().toUTCString() + ";path=/");
            });
            window.location.href = '/'
        }

    </script>
</head>

<body>
    <!-- loading -->
    <div class="loading" id="loadingSpinner" style="display: none;">
        <span class="typing-animation">Loading...</span>
    </div>

    <!-- toast -->
    <div class="toast-container position-fixed bottom-0 end-0 p-3">
        <div id="successToast" class="toast success-toast" role="alert" aria-live="assertive" aria-atomic="true">
            <div class="toast-header d-flex justify-content-end">
                <strong class="me-auto">Success</strong>
                <button type="button" class="btn-close" data-bs-dismiss="toast" aria-label="Close"></button>
            </div>
            <div class="toast-body" id="successToastBody">
                <!-- Success message will be inserted here -->
            </div>
        </div>

        <div id="errorToast" class="toast error-toast" role="alert" aria-live="assertive" aria-atomic="true">
            <div class="toast-header d-flex justify-content-end">
                <strong class="me-auto">Error</strong>
                <button type="button" class="btn-close" data-bs-dismiss="toast" aria-label="Close"></button>
            </div>
            <div class="toast-body" id="errorToastBody">
                <!-- Error message will be inserted here -->
            </div>
        </div>
    </div>

    <h1 class="welcome">Welcome to the Home Page</h1>
    <div class="pt-3 table-responsive">
        <nav class="navbar navbar-expand-sm navbar fixed-top">
            <div class="container">
                <a class="navbar-brand" href="#"> Status App </a>
                <div class="navbar-default">
                    <ul class="navbar-nav ml-auto">
                        <li class="nav-item cursor-pointer">
                            <div class="nav-link active homeTab" id="home" onclick='changeTab("home")'>
                                Home
                            </div>
                        </li>

                        <li class="nav-item cursor-pointer">
                            <div class="nav-link tableTab" id="table" onclick='changeTab("table")'>
                                List
                            </div>
                        </li>
                        <% if (role=='admin' ) { %>
                            <li class="nav-item cursor-pointer">
                                <div class="nav-link userTab" id="user" onclick='changeTab("user")'>
                                    User
                                </div>
                            </li>
                            <% } %>
                                <li class="nav-item cursor-pointer">
                                    <div class="nav-link tableTab" id="table" onclick='logout()'>
                                        Logout
                                    </div>
                                </li>
                    </ul>
                </div>
            </div>
        </nav>

        <div class="table-responsive p-3" id="user-table" style="display: none;">
            <%- include('user'); -%>
        </div>

        <div id="table-form" style="display: none;">
            <%- include('table',{cronJob:cronJob}); -%>
        </div>

        <div id="api-form" style="display: none;">
            <form id="myForm">
                <div>
                    <h1 class="mt-2 pt-5 mb-4">SMART App</h1>
                    <h2 class="mb-4">Authorization and Launch Context</h2>

                </div>
                <div class="my-2">
                    <label for="FHIRServer" class="form-label">API URL</label>
                    <input type="text" name="apiURL" class="form-control" id="FHIRServer" value="">
                </div>
                <div class="mb-2">
                    <label for="methods" class="form-label">Method</label>
                    <select class="select1 form-control " name="methods" id="methods">
                        <option value="" selected disabled>Select</option>
                        <option value="GET">GET</option>
                        <option value="POST">POST</option>
                        <option value="PUT">PUT</option>
                        <option value="DELETE">DELETE</option>
                        <option value="PATCH">PATCH</option>
                    </select>
                </div>
                <div class="mb-2">
                    <label for="access_token" class="form-label">Body</label>
                    <textarea type="text" name="body" class="form-control" id="access_token" rows="4"></textarea>
                </div>
                <div class="mb-2">
                    <label for="scopes" class="form-label">Header</label>
                    <textarea type="text" name="header" class="form-control" id="id_token" rows="4"></textarea>
                </div>
                <div class="mb-2">
                    <label for="FHIRServer" class="form-label">Status code</label>
                    <div class="w-100">
                        <select class="select2 form-control" name="statusCode" id="FHIRServer-code" multiple>
                            <option value="200">200</option>
                            <option value="201">201</option>
                            <option value="400">400</option>
                            <option value="500">500</option>
                            <option value="203">203</option>
                            <option value="403">403</option>
                            <option value="504">504</option>

                        </select>

                    </div>
                </div>

                <div class="mb-2">
                    <label for="time" class="form-label">Time</label>
                    <input type="time" class="form-control" name="time" id="time" step="2">
                </div>
                <div class="mb-5">
                    <label for="email" class="form-label">Email</label>
                    <input type="email" class="form-control" name="email" id="email">
                </div>
                <div class="pb-3 pt-3 fixed-bottom d-flex bg-white shadow-lg ">
                    <div class="container">
                        <button type="submit" class="btn btn-primary ml-2 col-sm-4" style="background-color: black;"
                            role="button" onclick="submitForm(event)">SAVE</button>

                    </div>
                </div>
            </form>

        </div>
    </div>
</body>

</html>